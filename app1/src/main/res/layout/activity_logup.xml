<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/lightslategrey"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="新用户注册"
            android:textSize="30sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="15dp"
                android:gravity="center"
                android:text="手机号码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/ec_edit_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="8dp"
                android:gravity="center"
                android:text="短信验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/ec_edit_password"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:hint="登录密码"/>
            <TextView
                android:clickable="true"
                android:id="@+id/tv_message"
                android:padding="15dp"
                android:gravity="center"
                android:text="获取短信验证码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:gravity="center"
                android:text="设置登录密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/ec_edit_password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="分组"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:layout_marginLeft="38dp"
                android:id="@+id/ec_edit_fenzu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入好友推荐码"/>
            <CheckBox
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:text="系统推荐"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>
       <Button
           android:id="@+id/ec_btn_sign_up"
           android:text="注册"
           android:layout_marginTop="100dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>