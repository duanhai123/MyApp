<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/lightslategrey"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingTop="10dp"
            android:gravity="center"
            android:text="登录"
            android:textSize="30sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <TextView
               android:padding="15dp"
               android:gravity="center"
               android:text="手机号码"
               android:layout_width="wrap_content"
               android:layout_height="match_parent" />

        <EditText
            android:id="@+id/ec_edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="15dp"
                android:gravity="center"
                android:text="登录密码"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/ec_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="登录密码"/>
        </LinearLayout>


        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/ec_btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_marginLeft="35dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="我已阅读并且同意服务条款"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">
            <TextView
                android:text="忘记密码?"
                android:id="@+id/ec_edit_forget_password"
                android:padding="10dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ec_btn_sign_up"
                android:gravity="center"
                android:text="新用户注册"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>